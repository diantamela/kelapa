// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      String   // UserRole enum diganti menjadi String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  employee     Employee?
  reports      Report[]
  @@map("users")
}

model Distributor {
  id           Int      @id @default(autoincrement())
  name         String
  contactPerson String?
  phone        String?
  address      String?
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  coconutIntakes CoconutIntake[]
  @@map("distributors")
}

model CoconutIntake {
  id            Int          @id @default(autoincrement())
  intakeDate    DateTime     // Tidak ada anotasi @db.Date untuk SQLite
  distributorId Int?
  weight        Float        // Tidak ada Decimal untuk SQLite, gunakan Float
  grade         String       // QualityGrade enum diganti menjadi String
  notes         String?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  distributor     Distributor? @relation(fields: [distributorId], references: [id])
  sortingRecords SortingRecord[]
  @@map("coconut_intakes")
}

model SortingRecord {
  id           Int      @id @default(autoincrement())
  intakeId     Int
  sortedDate   DateTime // Tidak ada anotasi @db.Date untuk SQLite
  goodCoconuts Float?   // Tidak ada Decimal untuk SQLite, gunakan Float
  badCoconuts  Float?   // Tidak ada Decimal untuk SQLite, gunakan Float
  notes        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  intake CoconutIntake @relation(fields: [intakeId], references: [id])
  @@map("sorting_records")
}

model Employee {
  id             Int      @id @default(autoincrement())
  userId         Int?     @unique
  employeeCode   String   @unique
  firstName      String
  lastName       String?
  position       String?
  division       String?
  employmentType String
  hourlyRate     Float?   // Tidak ada Decimal untuk SQLite, gunakan Float
  dailyRate      Float?   // Tidak ada Decimal untuk SQLite, gunakan Float
  isActive       Boolean  @default(true)
  hireDate       DateTime? // Tidak ada anotasi @db.Date untuk SQLite
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user         User?       @relation(fields: [userId], references: [id])
  attendances  Attendance[]
  productions  Production[]
  payrollRecords PayrollRecord[]
  @@map("employees")
}

model JobRate {
  id          Int      @id @default(autoincrement())
  jobType     String
  unit        String
  ratePerUnit Float    // Tidak ada Decimal untuk SQLite, gunakan Float
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("job_rates")
}

model Attendance {
  id            Int             @id @default(autoincrement())
  employeeId    Int
  date          DateTime        // Tidak ada anotasi @db.Date untuk SQLite
  checkIn       DateTime?
  checkOut      DateTime?
  status        String          // AttendanceStatus enum diganti menjadi String
  hoursWorked   Float?          // Tidak ada Decimal untuk SQLite, gunakan Float
  mealAllowance Boolean         @default(false)
  notes         String?
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  employee Employee @relation(fields: [employeeId], references: [id])
  @@map("attendances")
}

model Production {
  id             Int           @id @default(autoincrement())
  productionDate DateTime      // Tidak ada anotasi @db.Date untuk SQLite
  productionType String        // ProductionType enum diganti menjadi String
  employeeId     Int?
  quantity       Float         // Tidak ada Decimal untuk SQLite, gunakan Float
  unit           String
  notes          String?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  employee Employee? @relation(fields: [employeeId], references: [id])
  @@map("productions")
}

model PayPeriod {
  id         Int           @id @default(autoincrement())
  periodName String
  startDate  DateTime      // Tidak ada anotasi @db.Date untuk SQLite
  endDate    DateTime      // Tidak ada anotasi @db.Date untuk SQLite
  status     String        // PayrollStatus enum diganti menjadi String
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @default(now())

  payrollRecords PayrollRecord[]
  @@map("pay_periods")
}

model PayrollRecord {
  id             Int           @id @default(autoincrement())
  payPeriodId    Int
  employeeId     Int
  employmentType String
  daysWorked     Int?
  dailyRate      Float?        // Tidak ada Decimal untuk SQLite, gunakan Float
  dailySalary    Float?        // Tidak ada Decimal untuk SQLite, gunakan Float
  totalProduction Float?        // Tidak ada Decimal untuk SQLite, gunakan Float
  ratePerUnit    Float?        // Tidak ada Decimal untuk SQLite, gunakan Float
  contractSalary Float?        // Tidak ada Decimal untuk SQLite, gunakan Float
  mealAllowance  Float?        // Tidak ada Decimal untuk SQLite, gunakan Float
  bonuses        Float         @default(0) // Tidak ada Decimal untuk SQLite, gunakan Float
  deductions     Float         @default(0) // Tidak ada Decimal untuk SQLite, gunakan Float
  grossSalary    Float?        // Tidak ada Decimal untuk SQLite, gunakan Float
  netSalary      Float?        // Tidak ada Decimal untuk SQLite, gunakan Float
  status         String        // PayrollStatus enum diganti menjadi String
  processedAt    DateTime?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  payPeriod PayPeriod @relation(fields: [payPeriodId], references: [id])
  employee  Employee  @relation(fields: [employeeId], references: [id])
  @@map("payroll_records")
}

model Report {
  id         Int      @id @default(autoincrement())
  reportType String
  reportDate DateTime // Tidak ada anotasi @db.Date untuk SQLite
  data       String
  createdBy  Int?
  createdAt  DateTime @default(now())

  createdByUser User? @relation(fields: [createdBy], references: [id])
  @@map("reports")
}